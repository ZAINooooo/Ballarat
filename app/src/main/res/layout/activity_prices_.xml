<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".User_Module.Prices_Activity"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />


    <RelativeLayout
        android:id="@+id/mk"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/two"
        android:layout_below="@id/imageView"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingTop="15dp">


        <!--app:civ_border_color="#FF000000"-->
        <com.mikhaellopez.circularimageview.CircularImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="50dp"
android:layout_marginTop="-5dp"
        android:layout_height="40dp"
        android:src="@drawable/newest_logo"
        app:civ_border_width="2dp"
        />

        <TextView
            android:id="@+id/m1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratregular"
            android:text="Private Counselling"
            android:textColor="#000000"
            android:maxLength="20"
            android:layout_toRightOf="@id/profile_image"
            android:paddingTop="5dp"
             android:textStyle="bold"
             android:textSize="18dp" />

        <TextView
            android:id="@+id/m2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratregular"
            android:text="$100.00"
            android:layout_alignParentEnd="true"
            android:textColor="#ed1c24"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textSize="18dp" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/mk3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/three"
        android:layout_below="@id/mk"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/mh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratregular"
            android:text="TOTAL : $100.00"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp" />

    </RelativeLayout>



    <CheckBox
        android:layout_width="wrap_content"
        android:checked="false"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@id/multicolorline"
        android:textStyle="bold"
        android:layout_below="@id/mk3"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/multicolorline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms &amp; Conditions"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@id/mk3" />


    <RelativeLayout
        android:id="@+id/mk4"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/kmk"
        android:layout_below="@id/multicolorline"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingTop="12dp">


        <TextView
            android:id="@+id/multicolorline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PayPal"
            android:fontFamily="@font/myriad"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />


    </RelativeLayout>

